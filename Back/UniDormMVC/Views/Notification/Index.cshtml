            @Html.DisplayNameFor(model => model.notifID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.notifTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.notifID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notifTitle)
            </td>
